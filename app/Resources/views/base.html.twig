<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets output='public/css/style.css' filter='cssrewrite'
            '../app/Resources/public/css/bootstrap.min.css'
            '../app/Resources/public/css/body.css'
            '../app/Resources/public/css/bootstrap-responsive.min.css'
            '../app/Resources/public/css/style.css' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% javascripts output='modernizr.js' filter=''
            '../app/Resources/public/js/libs/modernizr-2.5.3-respond-1.1.0.min.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div style="margin-top: -50px; margin-left: 20px;">
            {% block content %}{% endblock %}
        </div>

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="/public/js/libs/jquery-1.7.2.min.js"><\/script>')</script>

        {% javascripts output='public/js/script.js' filter=''
            '../app/Resources/public/js/libs/bootstrap/bootstrap.min.js'
            '../app/Resources/public/js/script.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    </body>
</html>
