{% extends "SdtAdvertBundle::layout.html.twig" %}

{% block title %}{{ advert.title }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>
        Lecture de l'annonce
    </li>
{% endblock %}

{% block content %}
	<div class="page-header">
		<h1>
			{{ advert.title }}
			<small>le {{ advert.createdAt|date('d-m-Y') }}, par <a href="{{ path('application_sonata_user_profile', {'id': advert.author.id, 'username': advert.author.username }) }}">{{ advert.author.username }}</a></small>
		</h1>
	</div>

	{{ advert.message|purify }}

	<div class="row" style="margin-left: 0px;">
		<div class="span6">
			<table class="table table-striped table-bordered table-condensed">
				<tr>
					<th colspan="2">Description</th>
				</tr>
				<tr>
					<td>Categorie:</td>
					<td>{{ advert.category }}</td>
				</tr>
				<tr>
					<td>Age:</td>
					<td>{{ advert.ageMin }} - {{ advert.ageMax }} Ans</td>
				</tr>
				<tr>
					<td>Situé à:</td>
					<td>{{ advert.locale }}</td>
				</tr>
				<tr>
					<td>À la recherche de:</td>
					<td>{% for category in advert.lookingFor %}{{ category }} {% endfor %}</td>
				</tr>
				<tr>
					<td>Date de l'annonce:</td>
					<td>{{ advert.createdAt|date('d-m-Y à H:i:s') }}</td>
				</tr>
				<tr>
					<td>Mise à jour le:</td>
					<td>{{ advert.createdAt|date('d-m-Y à H:i:s') }}</td>
				</tr>
			</table>
		</div>

		<div class="span6">
			<h3>Actions</h3>

			<ul>
				<li><a href="{{ path('SdtMessageBundle_message_thread_new', {'id': advert.author.id }) }}">Contacter l'auteur</a></li>
			</ul>
		</div>
{% endblock %}